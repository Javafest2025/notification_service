# =============================================================================
# Notification Service - Environment Configuration
# =============================================================================
# Environment variables for the Notification Service microservice
# Copy this file to .env and fill in the actual values
# =============================================================================

# =============================================================================
# SPRING CONFIGURATION
# =============================================================================
# Application profile (local, docker, prod)
SPRING_PROFILE=local

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database for notification service

NOTIFICATION_DB_HOST=localhost
NOTIFICATION_DB_PORT=5434
NOTIFICATION_DB_NAME=notificationDB
NOTIFICATION_DB_USER=your_notification_db_username
NOTIFICATION_DB_PASSWORD=your_secure_notification_db_password

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================
# Message broker for receiving notification requests

RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=your_rabbitmq_username
RABBITMQ_PASSWORD=your_secure_rabbitmq_password

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Gmail SMTP for sending email notifications

GMAIL_ADDRESS=your_gmail_address@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# =============================================================================
# SERVICE DISCOVERY
# =============================================================================
# Eureka service registry

EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://localhost:8761/eureka/

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# User service for user information

USER_SERVICE_URL=http://localhost:8081

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Configuration for notification behavior

# Email template settings
EMAIL_FROM_NAME=ScholarAI Platform
EMAIL_REPLY_TO=noreply@scholarai.com

# Notification queue settings
NOTIFICATION_QUEUE_NAME=notification-queue
NOTIFICATION_EXCHANGE_NAME=notification-exchange
NOTIFICATION_ROUTING_KEY=notification-routing-key
